{
  "manifest_version": 2,

  "name": "Beautiful News",
  "version": "0.1",
  "homepage_url": "http://dvncan.com/beautifulnews",
  "description": "An extension to make news sites more readable",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Beautiful News",      // optional; shown in tooltip
    "default_popup": "popup.html"        // optional
  },
  "content_scripts": [
    {
      "matches": ["*://*.washingtonpost.com/*/*"],
      "css": ["wapo.css"],
      "js": ["wapo.js"],
      "run_at": "document_end"
    }
  ]
}